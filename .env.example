# ═══════════════════════════════════════════════════════════════
# 🤖 BASIC SETTINGS
# ═══════════════════════════════════════════════════════════════

BOT_TOKEN=
ADMIN_ID=
OTHER_BOT_USERNAME=

# ═══════════════════════════════════════════════════════════════
# 🌐 LOCALIZATION
# ═══════════════════════════════════════════════════════════════

DEFAULT_LOCALE=

# ═══════════════════════════════════════════════════════════════
# 🔔 ALERTS & NOTIFICATIONS
# ═══════════════════════════════════════════════════════════════

ALERT_CHAT_ID=
ALERT_TOPIC_ID=
START_ALERT=false
SHUTDOWN_ALERT=false
ERROR_ALERTS_ENABLED=false
ALERT_PARSE_MODE=HTML
ALERT_THROTTLE_SEC=0

# ═══════════════════════════════════════════════════════════════
# 📁 FILE PATHS
# ═══════════════════════════════════════════════════════════════

DATA_DIR=./bot_data
DATA_FILE=./bot_data/data.json
BANNED_FILE=./bot_data/banned.json
LOG_FILE=./bot_data/bot.log

# ═══════════════════════════════════════════════════════════════
# 🎨 USER INTERFACE SETTINGS
# ═══════════════════════════════════════════════════════════════

PAGE_SIZE=10
BANS_PAGE_SIZE=10
ASK_MIN_LENGTH=10
AUTO_CLOSE_AFTER_HOURS=24
ENABLE_MEDIA_FROM_USERS=false
INBOX_PREVIEW_LEN=60
MAX_CARD_LENGTH=4000
RATING_ENABLED=true
TICKET_HISTORY_LIMIT=10

# ═══════════════════════════════════════════════════════════════
# 💬 FEEDBACK SETTINGS
# ═══════════════════════════════════════════════════════════════

FEEDBACK_COOLDOWN_ENABLED=true
FEEDBACK_COOLDOWN_HOURS=24

# ═══════════════════════════════════════════════════════════════
# ⏱️  UTOMATION
# ═══════════════════════════════════════════════════════════════

AUTO_SAVE_INTERVAL=300

# ═══════════════════════════════════════════════════════════════
# 🚫 BAN DETECTION & MANAGEMENT
# ═══════════════════════════════════════════════════════════════

BAN_NAME_LINK_CHECK=false
BAN_DEFAULT_REASON=
BAN_ON_NAME_LINK=false
NAME_LINK_PATTERN=https?://|www\.|\.ru|\.com|\.org|\.io|@\w+|t\.me

# ═══════════════════════════════════════════════════════════════
# 💾 BACKUP SETTINGS
# ═══════════════════════════════════════════════════════════════

BACKUP_ENABLED=false
BACKUP_DIR=./bot_data/backups
BACKUP_SOURCE_DIR=.
STORAGE_BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_ON_START=false
BACKUP_ON_STOP=false
BACKUP_FULL_PROJECT=false
BACKUP_FILE_LIST=data.json,banned.json
BACKUP_FILE_PREFIX=backup
BACKUP_EXCLUDE_PATTERNS=backups,bot.log,__pycache__,.git,.pyc,venv,*.log
BACKUP_SEND_TO_TELEGRAM=false
BACKUP_MAX_SIZE_MB=100

# ═══════════════════════════════════════════════════════════════
# 📝 LOGGING SETTINGS
# ═══════════════════════════════════════════════════════════════

LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
DEBUG=0
LOG_CLEANUP_ENABLED=false
LOG_RETENTION_DAYS=7
ERROR_ALERTS_ENABLED=false
ERROR_ALERT_THROTTLE_SEC=60

# ═══════════════════════════════════════════════════════════════
# 🕒 TIMEZONE
# ═══════════════════════════════════════════════════════════════

TIMEZONE=
TZ_OFFSET=UTC

# ═══════════════════════════════════════════════════════════════
# 🌐 NETWORK & API SETTINGS
# ═══════════════════════════════════════════════════════════════

BOT_API_BASE=https://api.telegram.com
USE_LOCAL_BOT_API=false
REQUEST_TIMEOUT=15
RETRY_ATTEMPTS=3
RETRY_BACKOFF_SEC=2

# ╔══════════════════════════════════════════════════════════════╗
# ║                  END OF CONFIGURATION                        ║
